@*@model List<EmployeeModel>*@
@model List<Employee_page.Models.EmployeeModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Employee ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@s.EmployeeId</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Email</td>
                <td>@s.Department</td>
                <td>
                    @*<a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.EmployeeId">Details</a>*@
                    <a class="btn btn primary" href="Employee/Details">Employee details</a>
                </td>

            </tr>

        }

    </tbody>
</table>

<a class="btn btn primary" href="Employee/Register">Add employee</a>




